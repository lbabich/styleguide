{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "max-line-length": {
      "options": [
        180
      ]
    }
  },
  "rules": {
    "no-default-export": true,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "arrow-parens": false,
    "variable-name": false,
    "no-unused-expression": true,
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "tabs"
    ],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "rulesDirectory": []
}
